<h2 align = 'center'> Welcome to <%= @user.username %>'s page</h2>

<div class = 'row'>
  <div class = 'col-md-4 col-md-offset-4 text-center'>
    <%= gravatar_tag @user.email, :size => 100, :html => {class: 'img-circle'} %>
  </div>
</div>

<h4 align = 'center'><%= @user.username %>'s articles</h4>
  <%= render 'articles/article', obj: @user_articles %>

  <div align = 'center'>
    <%= will_paginate @user_articles %>
  </div>