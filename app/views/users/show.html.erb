<h2 align = 'center'> Username: <%= @user.username %></h2>

<div class = 'well col-xs-8 col-xs-offset-2'>
  <h4 class= 'text-center description'><strong>Email:</strong></h4>
  <hr>
  <%= @user.email %>


  <div class = 'article-actions'>
    <%= link_to 'Edit this User', edit_user_path(@user), class: 'btn btn-xs btn-primary' %>

    <%= link_to 'Delete this User', user_path(@user), method: :delete,                             data: {confirm: 'Are you sure you want to delete this user?'},
                                  class: 'btn btn-xs btn-danger' %>

    <%= link_to 'View all Articles', articles_path, class: 'btn btn-xs btn-success' %>
  </div>
</div>